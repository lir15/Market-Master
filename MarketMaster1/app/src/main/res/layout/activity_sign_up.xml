<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/sutv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Welcome To Market Master!"
        android:textColor="#FF9900"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/sutv_2"
        android:layout_below="@+id/sutv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Create your account to get started !"
        android:textColor="#FF9900"
        />

    <EditText
        android:id="@+id/txtfname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sutv_2"
        android:textSize="16sp"
        android:textColor="#FFAD33"
        android:hint="First Name"
        android:inputType="text"
        android:background="@drawable/login_window"
        android:paddingLeft="10dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/txtlname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#FFAD33"
        android:hint="Last Name"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/txtfname"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_window"
        android:paddingLeft ="10dp"
        />


    <EditText
        android:id="@+id/txtpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#FFAD33"
        android:hint="Set your password"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/txtlname"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_window"
        android:paddingLeft ="10dp"
        />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#FFAD33"
        android:hint="Email Address"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/txtpass"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_window"
        android:paddingLeft ="10dp"
        />

    <EditText
        android:id="@+id/txtphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#FFAD33"
        android:hint="Phone"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/txtemail"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_window"
        android:paddingLeft ="10dp"
        />


    <Button
        android:id="@+id/btnreg"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtphone"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn"
        android:text="sign up"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtphone"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/btnreg"
        android:background="@drawable/login_btn"
        android:text="login"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_name1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Name" />

        <EditText
            android:id="@+id/profile_name2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Enter your name"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/profile_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:padding="8dp"
            android:text=">"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_gender1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Gender"/>

        <EditText
            android:id="@+id/profile_gender2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Change your gender"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/profile_gender3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:padding="8dp"
            android:text=">"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_address1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Address" />

        <EditText
            android:id="@+id/profile_address2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Enter your address"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/profile_address3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:padding="8dp"
            android:text=">"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_birth1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Birthday" />

        <EditText
            android:id="@+id/profile_birth2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Enter your birth"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/profile_birth3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:padding="8dp"
            android:text=">"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <Button
        android:id="@+id/btnsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/login_btn"/>

    <Button
        android:id="@+id/btnguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="User guide"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/login_btn"/>

    <TextView
        android:id="@+id/backbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="30dp"
        android:textColor="#FF9900"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marketmaster">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Market Master"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarketMaster">
        <activity android:name=".ProfileActivity" />
        <activity android:name=".WatchlistActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".MenuActivity" />
        <activity
            android:name=".Display_detail"
            android:parentActivityName=".Display_detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Display_detail" />
        </activity>
        <activity android:name=".DisplayActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>